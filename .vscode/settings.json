{
  // 既存の設定はそのまま、以下を追加 or 確認
  "prettier.requireConfig": true,            // 設定ファイルのない言語はPrettierが触らない
  "prettier.disableLanguages": ["ruby"],     // RubyはPrettierの対象外に

  // Rubyを確実にRubyとして扱う（GemfileやRakefileなども）
  "files.associations": {
    "Gemfile": "ruby",
    "Rakefile": "ruby",
    "*.rake": "ruby",
    "*.ru": "ruby"
  },

  // RubyはLSPを明示（既に入っていればOK）
  "[ruby]": { "editor.defaultFormatter": "Shopify.ruby-lsp" },
  "rubyLsp.useBundler": true,
  "rubyLsp.rubyVersionManager": "rbenv",
  "rubyLsp.formatter": "standard",
  "rubyLsp.linters": ["standard"]
}
